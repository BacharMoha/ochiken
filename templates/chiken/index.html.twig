<script>
	const track = document.querySelector('.carousel-track');
const slides = Array.from(track.children);

let currentSlide = 0;
const totalSlides = slides.length;
const slideInterval = 3000;
// Intervalle de 5 secondes

// Fonction pour passer √† la slide suivante
function moveToSlide(slideIndex) { // Calcul de la position de la nouvelle slide
const slideWidth = slides[0].getBoundingClientRect().width;
const moveAmount = -(slideIndex * slideWidth);

// Appliquer la transformation pour faire d√©filer les slides
track.style.transform = `translateX(${moveAmount}px)`;

currentSlide = slideIndex;
}

// D√©marrage de l'intervalle automatique
setInterval(() => {
if (currentSlide < totalSlides - 1) {
moveToSlide(currentSlide + 1);
} else {
moveToSlide(0); // Revenir √† la premi√®re slide
}
}, slideInterval);

let currentIndex = 0;
const itemsToShow = 3; // Afficher 3 √©l√©ments √† la fois
const menuItems = document.querySelectorAll('.menu-item');
const totalItems = menuItems.length;
const menuContainer = document.querySelector('.menu-items');

// Fonction pour mettre √† jour le d√©filement
const updateSlide = () => {
const offset = -(currentIndex * (100 / itemsToShow)) + '%';
menuContainer.style.transform = `translateX(${offset})`;
};

// Fonction pour faire d√©filer les √©l√©ments automatiquement
const autoSlide = () => {
currentIndex++;
if (currentIndex >= totalItems - itemsToShow) {
currentIndex = 0; // Revenir au d√©but
}updateSlide();
};

// D√©marrer le d√©filement automatique toutes les 3 secondes
setInterval(autoSlide, 6000); // D√©filement toutes les 3 secondes

