{# templates/admin/general_dashboard.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>
		body {
			margin: 0;
			padding: 0;
			font-family: Arial, sans-serif;
			background-color: #050C20;
		}

		.background-overlay::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-image: url("{{ asset('images/hamburger-est-assis-table-frites_869561-1.jpg') }}");
			background-size: cover;
			background-color: #050C20;
			background-position: center;
			background-attachment: fixed;
			filter: blur(3px);
			z-index: -2;
		}

		.background-overlay {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: -1;
		}

		.dashboard-container {
			margin-top: 50px;
			max-width: 900px;
			margin-left: auto;
			margin-right: auto;
			text-align: center;
			position: relative;
			z-index: 1;
		}

		.dashboard-card {
			margin: 20px 0;
			border-radius: 20px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.532);
		}

		.btn {
			margin: 10px;
			border-radius: 20px;
			background: #0839CF;
		}

		.nombre-pharmacies {
			font-family: "Comic Sans MS", cursive, sans-serif;
			text-shadow: 0 0 10px rgba(0, 0, 0, 0.532);
			font-size: 40px;
		}

		.mb-4 {
			font-family: "Chalkduster", fantasy;
		}
		.row {
			margin: 0;
		}

		.d-flex {
			display: flex;
			flex-wrap: nowrap; /* Assure que les éléments ne passent pas à la ligne suivante */
			gap: 10px; /* Espacement entre les cartes */
		}

		.card {
			flex: 1; /* Assure que les cartes ont la même largeur */
		}

		.card-body {
			padding: 20px; /* Ajustez le padding selon vos besoins */

		}
	</style>
{% endblock %}

{% block body %}
	<div class="background-overlay"></div>

	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<a class="navbar-brand" href="#"></a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav" style="background: transparent;">
				<ul class="navbar-nav ms-auto">
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Profil
						</a>
						<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown" style="border-radius: 20px;">
							
							<li>
								<a class="dropdown-item" href="">
									{{ app.user.username }}</a>
							</li>
							
							<li>
								<a class="dropdown-item" href=" {{ path('app_profil',{'id': app.user.id }) }} ">
									Gerer profil</a>
							</li>
							<li><hr class="dropdown-divider"></li>
							<li>
								<a class="dropdown-item text-danger" href="{{ path('app_logout')}}">Déconnexion</a>
							</li>
						</ul>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container dashboard-container">
		<h1 class="mb-4" style="color: #ea551d;">Tableau de Bord de
			<img style="height: 170px;" src="{{ asset('images/logo.png') }}"></h1>

		<div class="row">
			<div class="d-flex justify-content-between">
				<div class="card dashboard-card" style="background: #fae9d7; border-radius: 20px; flex: 1; margin-right: 10px;">
					<div class="card-body">
						<h5 class="card-title">Total de Chickens</h5>
						<b>
							<strong>
								<h2 class="nombre-pharmacies">__ {{ chiken|length}} __</h2>
							</strong>
						</b>
					</div>
				</div>
				<div class="card dashboard-card" style="background: #fae9d7; border-radius: 20px; flex: 1; margin-right: 10px;">
					<div class="card-body">
						<h5 class="card-title">Total de Sandwitchs</h5>
						<b>
							<strong>
								<h2 class="nombre-pharmacies">__ {{ sandwich|length}} __</h2>
							</strong>
						</b>
					</div>
				</div>
				<div class="card dashboard-card" style="background: #fae9d7; border-radius: 20px; flex: 1;">
					<div class="card-body">
						<h5 class="card-title">Total de Boissons</h5>
						<b>
							<strong>
								<h2 class="nombre-pharmacies">__ {{ boisson|length}} __</h2>
							</strong>
						</b>
					</div>
				</div>
			</div>
		</div>


		<div class="row">


			<div class="col-md-4">
