			/* Section de gauche pour les infos utilisateur */
			.profile-section {
				background-color: #ffffff;
				width: 40%;
				padding: 40px;
				display: flex;
				flex-direction: column;
				align-items: center;
				border-right: 2px solid #f0f0f0;
			}

			.profile-picture {
				width: 150px;
				height: 150px;
				border-radius: 50%;
				overflow: hidden;
				margin-bottom: 20px;
				border: 4px solid #ea551d;
				box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
			}

			.profile-picture img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}

			.upload-btn {
				display: block;
				margin-top: 10px;
				background-color: #ea551d;
				color: white;
				border: none;
				padding: 10px 15px;
				cursor: pointer;
				border-radius: 20px;
				font-size: 14px;
				transition: background-color 0.3s ease;
			}

			.upload-btn:hover {
				background-color: #c84315;
			}

			.form-group {
				width: 100%;
				margin-bottom: 15px;
			}

			.form-group label {
				font-weight: bold;
				display: block;
				margin-bottom: 5px;
			}

			.form-group input {
				width: 100%;
				padding: 10px 10px 10px 35px;
				border-radius: 30px;
				border: 2px solid #ea551d;
			}
			.submit-btn {
				background-color: #ea551d;
				color: white;
				padding: 12px 20px;
				border: none;
				border-radius: 25px;
				cursor: pointer;
				font-size: 16px;
				margin-top: 20px;
				width: 50%;
				text-align: center;
			}

			.submit-btn:hover {
				background-color: #c84315;
			}

			/* Section de droite pour les statistiques */
			.stats-section {
				display: flex;
				flex-wrap: wrap; /* Permet aux éléments de passer à la ligne si nécessaire */
				gap: 10px; /* Espace entre les cercles */
				justify-content: center; /* Centrer les cercles horizontalement */
				align-items: center;
				background-color: #f9f9f9;
				padding: 40px;
			}

			.stat-circle {
				width: 140px;
				height: 140px;
				border-radius: 50%;
				background-color: #ffffff;
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
				transition: box-shadow 0.3s ease, transform 0.3s ease;
				border: 2px solid #ea551d;
			}

			.stat-circle:hover {
				box-shadow: 0 0 25px rgba(0, 0, 0, 0.30);
