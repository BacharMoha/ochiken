<script>
    // Fonction pour gérer la sélection de fichier et prévisualiser la nouvelle image
    function uploadImage(input) {
        if (input.files && input.files[0]) {
            // Crée un objet URL pour l'image sélectionnée
            var reader = new FileReader();

            reader.onload = function (e) {
                // Met à jour la source de l'image avec la nouvelle image sélectionnée
                document.querySelector('.profile-picture img').src = e.target.result;
            }

            // Lis le fichier comme URL de données
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

