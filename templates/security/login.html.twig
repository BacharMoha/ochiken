<div class="container">
    <header>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #ffffff;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
            }

            .container {
                text-align: center;
                width: 90%;
                max-width: 400px;
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .logo {
                width: 150px;
                margin-bottom: 20px;
            }

            h2 {
                color: #ea551d;
                font-size: 24px;
                margin-bottom: 10px;
                font-family: "Great Vibes", cursive;
            }

            .subtitle {
                color: #999999;
                font-size: 16px;
                margin-bottom: 20px;
                font-family: "Blippo", fantasy;
            }

            .input-container {
                position: relative;
                margin-bottom: 20px;
            }

            .input-container input {
                width: 100%;
                padding: 15px 15px 15px 45px;
                border: 2px solid  #ea551d;
                border-radius: 30px;
                font-size: 16px;
            }

            .input-icon {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                font-size: 17px;
                color: #ea551d;
            }

            .btn {
                width: 100%;
                padding: 15px;
                background-color: #ea551d;;
                color: #ffffff;
                border: none;
                border-radius: 30px;
                font-size: 16px;
                cursor: pointer;
                margin-top: 10px;
            }

            .btn:hover {
                background-color: #d25f35;
            }

            .login-link {
                margin-top: 20px;
                color: #666666;
            }

            .login-link a {
                color: #0839CF;
                text-decoration: none;
            }

            .login-link a:hover {
                text-decoration: underline;
            }

            @media(max-width: 480px) {
                .input-container input {
                    padding-left: 40px;
                }
            }
        </style>
        <div class="container">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
